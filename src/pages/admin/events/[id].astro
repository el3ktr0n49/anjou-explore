// Force SSR : Cette page a une route dynamique [id] et accède à request.headers
export const prerender = false;

import Layout from '../../../layouts/Layout.astro';
import EventDetailsPage from '../../../components/admin/islands/EventDetailsPage';

// Get event ID from URL
const { id } = Astro.params;

if (!id || id === 'new') {
  return Astro.redirect('/admin/events');
}

// Fetch event for SSR (to populate header)
let eventName = 'Chargement...';
let eventSubtitle = '...';

try {
  const response = await fetch(`${Astro.url.origin}/api/admin/events/${id}`, {
    headers: {
      Cookie: Astro.request.headers.get('Cookie') || '',
    },
  });

  if (response.ok) {
    const data = await response.json();
    const event = data.event;

    const formatDate = (dateStr: string): string => {
      const date = new Date(dateStr);
      return date.toLocaleDateString('fr-FR', {
        day: 'numeric',
        month: 'long',
        year: 'numeric',
      });
    };

    const getStatusLabel = (status: string): string => {
      const labels: Record<string, string> = {
        DRAFT: 'Brouillon',
        OPEN: 'Ouvert',
        CLOSED: 'Fermé',
        ARCHIVED: 'Archivé',
      };
      return labels[status] || status;
    };

    eventName = event.name;
    eventSubtitle = `${event.slug} • ${formatDate(event.date)} • ${getStatusLabel(event.status)}`;
  }
} catch (error) {
  console.error('Error fetching event:', error);
}
---

