                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
            </a>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <h1 class="text-2xl md:text-3xl font-serif">{eventName}</h1>
          </div>
          <p class="text-white/90 text-sm">
            {eventSubtitle}
          </p>
        </div>

        <button
          id="logout-btn"
          class="flex items-center space-x-2 px-5 py-2.5 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg transition border border-white/20 text-sm font-medium"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <span>Déconnexion</span>
        </button>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 bg-gradient-to-br from-[var(--color-anjou-beige)]/20 via-white to-[var(--color-anjou-beige)]/10 min-h-[calc(100vh-300px)]">
    <div class="container mx-auto px-4 max-w-7xl">
      {/* Astro Island with Preact */}
      <EventDetailsPage client:load eventId={id} />
    </div>
  </section>
</Layout>

<style is:global>
  /* Modal Styles */
  .modal {
    position: fixed;
    inset: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal.hidden {
    display: none !important;
  }

  .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    position: relative;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    max-width: 32rem;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-anjou-beige);
  }

  .modal-close {
    padding: 0.5rem;
    border: none;
    background: transparent;
    cursor: pointer !important;
    font-size: 1.5rem;
    color: var(--color-anjou-olive);
    transition: all 0.2s;
  }

  .modal-close:hover {
    color: var(--color-anjou-brown);
    transform: scale(1.1);
  }

  /* Ensure all buttons have pointer cursor */
  button {
    cursor: pointer;
  }

  .modal-body {
    padding: 1.5rem;
  }

  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-anjou-beige);
  }

  /* Form Styles */
  .form-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-anjou-olive);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    background: white;
    border: 2px solid var(--color-anjou-beige);
    border-radius: 0.75rem;
    font-size: 0.875rem;
    color: var(--color-anjou-brown);
    transition: all 0.2s;
    outline: none;
  }

  .form-input:focus {
    border-color: var(--color-anjou-gold);
    box-shadow: 0 0 0 4px rgba(196, 165, 113, 0.15);
    background: var(--color-anjou-beige)/10;
  }

  /* Display mode value styling */
  .field-value {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-anjou-brown);
    background: var(--color-anjou-beige)/20;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    border: 1px solid var(--color-anjou-beige);
  }

  /* Edit mode indicator */
  .edit-mode-indicator {
    background: linear-gradient(135deg, #fffbeb, #fef3c7);
    border: 2px solid #fbbf24;
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .edit-mode-indicator svg {
    width: 1.25rem;
    height: 1.25rem;
    color: #f59e0b;
    flex-shrink: 0;
  }

  .edit-mode-indicator p {
    font-size: 0.875rem;
    font-weight: 600;
    color: #92400e;
    margin: 0;
  }

  /* Button Styles */
  .btn-primary {
    padding: 0.625rem 1.5rem;
    background: linear-gradient(135deg, var(--color-anjou-gold), var(--color-anjou-olive));
    color: white;
    border: none;
    border-radius: 0.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer !important;
    transition: all 0.2s;
    box-shadow: 0 2px 8px rgba(196, 165, 113, 0.25);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(196, 165, 113, 0.4);
  }

  .btn-secondary {
    padding: 0.625rem 1.5rem;
    background: white;
    color: var(--color-anjou-olive);
    border: 2px solid var(--color-anjou-olive);
    border-radius: 0.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer !important;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: var(--color-anjou-olive)/10;
    border-color: var(--color-anjou-brown);
    color: var(--color-anjou-brown);
  }

  /* Activity Card */
  .activity-card {
    border: 2px solid var(--color-anjou-beige);
    border-radius: 1rem;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(to bottom, white, var(--color-anjou-beige)/5);
    transition: all 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .activity-card:hover {
    border-color: var(--color-anjou-gold);
    box-shadow: 0 6px 16px rgba(196, 165, 113, 0.3);
    transform: translateY(-2px);
  }

  .activity-card:not(:last-child) {
    margin-bottom: 2rem;
    border-bottom: 3px solid var(--color-anjou-gold);
  }

  /* Status Badge */
  .badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .badge-draft { background: #f3f4f6; color: #6b7280; }
  .badge-open { background: #d1fae5; color: #065f46; }
  .badge-closed { background: #fee2e2; color: #991b1b; }
  .badge-archived { background: #e0e7ff; color: #3730a3; }

  /* Stat Card */
  .stat-card {
    background: var(--color-anjou-beige)/20;
    border: 2px solid var(--color-anjou-beige);
    border-radius: 1rem;
    padding: 1.5rem;
    text-align: center;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-anjou-brown);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-anjou-olive);
  }

  /* Toast Styles */
  .toast {
    min-width: 320px;
    max-width: 480px;
    padding: 1rem 1.25rem;
    border-radius: 0.875rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15), 0 2px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    animation: slideIn 0.3s ease;
    backdrop-filter: blur(8px);
  }

  .toast-success {
    background: white;
    border: 2px solid #10b981;
    border-left-width: 6px;
    color: #065f46;
  }

  .toast-success .toast-icon {
    color: #10b981;
  }

  .toast-error {
    background: white;
    border: 2px solid #ef4444;
    border-left-width: 6px;
    color: #991b1b;
  }

  .toast-error .toast-icon {
    color: #ef4444;
  }

  .toast-info {
    background: white;
    border: 2px solid #3b82f6;
    border-left-width: 6px;
    color: #1e40af;
  }

  .toast-info .toast-icon {
    color: #3b82f6;
  }

  .toast-icon {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
  }

  .toast-message {
    flex: 1;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .toast-close {
    flex-shrink: 0;
    padding: 0.25rem;
    background: transparent;
    border: none;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .toast-close:hover {
    opacity: 1;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideOut {
    from {
      opacity: 1;
      transform: translateX(0);
    }
    to {
      opacity: 0;
      transform: translateX(100%);
    }
  }

  .toast.slide-out {
    animation: slideOut 0.3s ease forwards;
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .activity-card {
    animation: fadeIn 0.3s ease backwards;
  }
</style>

