---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { Image } from 'astro:assets';
import logoHeader from '../../assets/images/logo_color_250.webp';
---

<AdminLayout title="Connexion">
  <div class="min-h-screen flex items-center justify-center px-4 py-12">
    <div class="max-w-md w-full">
      <!-- Logo -->
      <div class="text-center mb-8">
        <Image
          src={logoHeader}
          alt="Anjou Explore"
          width={150}
          quality={90}
          class="mx-auto mb-4"
        />
        <h1 class="text-2xl font-serif text-[var(--color-anjou-brown)] mb-2">
          Administration
        </h1>
        <p class="text-sm text-gray-600">Connexion sécurisée</p>
      </div>

      <!-- Formulaire -->
      <div class="bg-white rounded-lg shadow-xl p-8">
        <form id="login-form" class="space-y-6">
          <!-- Mot de passe partagé -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Mot de passe partagé
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              autocomplete="current-password"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-anjou-gold)] focus:border-transparent"
              placeholder="Entrez le mot de passe"
            />
          </div>

          <!-- Sélection admin -->
          <div>
            <label for="adminName" class="block text-sm font-medium text-gray-700 mb-2">
              Qui êtes-vous ?
            </label>
            <select
              id="adminName"
              name="adminName"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-anjou-gold)] focus:border-transparent"
            >
              <option value="">Sélectionnez votre nom</option>
              <option value="José">José</option>
              <option value="Fabien">Fabien</option>
              <option value="Benoît">Benoît</option>
              <option value="Adrien">Adrien</option>
            </select>
          </div>

          <!-- Code 2FA -->
          <div>
            <label for="token2FA" class="block text-sm font-medium text-gray-700 mb-2">
              Code Google Authenticator
            </label>
            <input
              type="text"
              id="token2FA"
              name="token2FA"
              required
              inputmode="numeric"
              pattern="\d{6}"
              maxlength="6"
              autocomplete="one-time-code"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-anjou-gold)] focus:border-transparent text-center text-2xl tracking-widest font-mono"
              placeholder="000000"
            />
            <p class="mt-1 text-xs text-gray-500">
              Entrez le code à 6 chiffres de votre application
            </p>
          </div>

          <!-- Message d'erreur -->
          <div id="error-message" class="hidden p-4 bg-red-50 border border-red-200 rounded-lg">
            <p class="text-sm text-red-800"></p>
          </div>

          <!-- Bouton de connexion -->
          <button
            type="submit"
            id="submit-btn"
            class="w-full bg-[var(--color-anjou-gold)] text-white py-3 px-6 rounded-lg font-semibold hover:opacity-90 transition disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Se connecter
          </button>
        </form>

        <!-- Info sécurité -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="flex items-start space-x-2 text-xs text-gray-500">
            <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <p>
              Connexion protégée par authentification à deux facteurs (2FA).
              Votre session expirera automatiquement après 24 heures d'inactivité.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  const form = document.getElementById('login-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Désactiver le bouton
    submitBtn.disabled = true;
    submitBtn.textContent = 'Connexion en cours...';

    // Cacher les erreurs précédentes
    errorMessage.classList.add('hidden');

    // Récupérer les données
    const formData = new FormData(form);
    const data = {
      password: formData.get('password') as string,
      adminName: formData.get('adminName') as string,
      token2FA: formData.get('token2FA') as string,
    };

    try {
      // Appel API
      const response = await fetch('/api/auth/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok && result.success) {
        // Succès → Rediriger vers dashboard
        window.location.href = '/admin/dashboard';
      } else {
        // Erreur → Afficher message
        showError(result.error || 'Erreur de connexion');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Se connecter';
      }
    } catch (error) {
      showError('Erreur réseau. Veuillez réessayer.');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Se connecter';
    }
  });

  function showError(message: string) {
    errorMessage.classList.remove('hidden');
    const p = errorMessage.querySelector('p');
    if (p) p.textContent = message;
  }

  // Auto-focus sur le premier champ
  const passwordInput = document.getElementById('password') as HTMLInputElement;
  passwordInput?.focus();

  // Format automatique du code 2FA (enlever espaces)
  const token2FAInput = document.getElementById('token2FA') as HTMLInputElement;
  token2FAInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    target.value = target.value.replace(/\D/g, '').slice(0, 6);
  });
</script>
