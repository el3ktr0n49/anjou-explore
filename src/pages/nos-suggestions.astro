<style set:html={`
  .hero-suggestions-parallax {
    position: relative;
  }

  .hero-suggestions-bg {
    background-image: url("${chateauImage.src}");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    will-change: transform;
    transition: transform 0.1s ease-out;
  }
`}></style>

<script>
  // Parallax effect on scroll
  function handleParallax() {
    const heroSection = document.querySelector('.hero-suggestions-parallax') as HTMLElement;
    const heroBg = document.querySelector('.hero-suggestions-bg') as HTMLElement;

    if (!heroSection || !heroBg) return;

    const scrollPosition = window.pageYOffset;
    const heroHeight = heroSection.offsetHeight;

    // Only apply parallax while the hero section is visible
    if (scrollPosition < heroHeight) {
      // Move background slower than scroll (parallax effect)
      const parallaxSpeed = 0.5;
      heroBg.style.transform = `translateY(${scrollPosition * parallaxSpeed}px)`;
    }
  }

  // Add scroll event listener
  window.addEventListener('scroll', handleParallax, { passive: true });

  // Initial call
  handleParallax();
</script>
