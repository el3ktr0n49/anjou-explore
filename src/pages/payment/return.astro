import Layout from '../../layouts/Layout.astro';
import { prisma } from '../../lib/db/client';

// R√©cup√©rer groupId ou reservationId depuis les query params
const url = new URL(Astro.request.url);
const groupId = url.searchParams.get('groupId');
const reservationId = url.searchParams.get('reservationId');

let status: 'loading' | 'paid' | 'pending' | 'failed' | 'not-found' = 'loading';
let reservations: any[] = [];
let event: any = null;
let totalAmount = 0;

if (groupId || reservationId) {
  try {
    // R√©cup√©rer les r√©servations (soit par groupId, soit une seule)
    reservations = await prisma.reservation.findMany({
      where: groupId
        ? { groupId }
        : { id: reservationId },
      include: {
        event: {
          select: {
            name: true,
            slug: true,
            date: true,
          },
        },
        activity: {
          select: {
            name: true,
          },
        },
        paymentTransactions: {
          orderBy: {
            createdAt: 'desc',
          },
          take: 1,
        },
      },
    });

    if (reservations.length > 0) {
      event = reservations[0].event;

      // Calculer le montant total
      totalAmount = reservations.reduce((sum, r) => sum + Number(r.amount), 0);

      // D√©terminer le statut global (PAID si toutes pay√©es, FAILED si au moins une failed, sinon PENDING)
      const allPaid = reservations.every(r => r.paymentStatus === 'PAID');
      const anyFailed = reservations.some(r => r.paymentStatus === 'FAILED');

      status = allPaid ? 'paid' :
               anyFailed ? 'failed' : 'pending';
    } else {
      status = 'not-found';
    }
  } catch (error) {
    console.error('[Payment Return] Erreur:', error);
    status = 'not-found';
  }
}

// R√©f√©rence pour check-status (utiliser groupId en priorit√©)
const checkStatusParam = groupId ? `groupId=${groupId}` : `reservationId=${reservationId}`;

// Formater les participants
function formatParticipants(participants: any): string {
  const parts: string[] = [];
  for (const [type, count] of Object.entries(participants as Record<string, number>)) {
    if (count > 0) {
      parts.push(`${count} ${type}${count > 1 ? 's' : ''}`);
    }
  }
  return parts.join(', ');
}

// Formater la date
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('fr-FR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  }).format(date);
}

// Formater le montant
function formatAmount(amount: any): string {
  return new Intl.NumberFormat('fr-FR', {
    style: 'currency',
    currency: 'EUR',
  }).format(Number(amount));
}
