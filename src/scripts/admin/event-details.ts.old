  if (nameEl) nameEl.textContent = event.name;
  if (subtitleEl) {
    subtitleEl.textContent = `${event.slug} â€¢ ${formatDate(event.date)} â€¢ ${getStatusLabel(event.status)}`;
  }

  // Render display or edit mode
  if (isEditingEvent) {
    renderEventEditForm();
  } else {
    renderEventDisplay();
  }
}

