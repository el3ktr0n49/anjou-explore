  if (confirmCancelBtn) {
    confirmCancelBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      closeConfirm(false);
    });
  }

  if (confirmOkBtn) {
    confirmOkBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      closeConfirm(true);
    });
  }

  if (confirmOverlay) {
    confirmOverlay.addEventListener('click', (e) => {
      e.stopPropagation();
      closeConfirm(false);
    });
