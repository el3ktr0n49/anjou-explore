async function checkAuth() {
  try {
    const response = await fetch('/api/auth/verify', {
      credentials: 'include',
    });
    const data = await response.json();

    if (!data.authenticated) {
      window.location.href = '/admin/login';
      return false;
    }

    return true;
  } catch (error) {
    console.error('Erreur de vÃ©rification:', error);
    window.location.href = '/admin/login';
    return false;
  }
}

