---
import '../styles/global.css';
import { Image } from 'astro:assets';
import logoHeader from '../assets/images/logo_color_250.webp';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Escapades en Anjou - Découvrez l'Anjou autrement avec José, Fabien & Benoît" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-2">
        <div class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="flex-shrink-0">
            <Image
              src={logoHeader}
              alt="Anjou Explore"
              width={200}
              quality={90}
              loading="eager"
              class="h-20 w-auto"
            />
          </a>

          <!-- Desktop Navigation -->
          <ul class="hidden lg:flex items-center space-x-6 text-sm">
            <li><a href="/" class="text-[var(--color-anjou-brown)] hover:text-[var(--color-anjou-gold)] transition">Accueil</a></li>
            <li><a href="/equipe" class="text-[var(--color-anjou-brown)] hover:text-[var(--color-anjou-gold)] transition">L'équipe</a></li>
            <li class="relative group">
              <a href="/notre-catalogue" class="text-[var(--color-anjou-brown)] hover:text-[var(--color-anjou-gold)] transition pb-6">Notre Catalogue</a>
              <ul class="absolute left-0 top-full mt-2 w-48 bg-white shadow-lg rounded overflow-hidden hidden group-hover:block z-50">
                <li><a href="/nos-suggestions" class="block px-4 py-2 text-sm hover:bg-[var(--color-anjou-beige)]">Nos Suggestions</a></li>
              </ul>
            </li>
            <li class="relative group">
              <a href="#" class="text-[var(--color-anjou-brown)] hover:text-[var(--color-anjou-gold)] transition pb-6">Evènements</a>
              <ul class="absolute left-0 top-full mt-2 w-48 bg-white shadow-lg rounded overflow-hidden hidden group-hover:block z-50">
                <li><a href="/evenements/ae6" class="block px-4 py-2 text-sm hover:bg-[var(--color-anjou-beige)]">Anjou Explore #6</a></li>
              </ul>
            </li>
            <li><a href="/galerie-photos" class="text-[var(--color-anjou-brown)] hover:text-[var(--color-anjou-gold)] transition">Galerie Photos</a></li>
          </ul>

          <!-- Contact Button & Info -->
          <div class="hidden lg:flex items-center space-x-4">
            <a href="tel:0683924503" class="text-sm text-[var(--color-anjou-brown)]">06.83.92.45.03</a>
            <a href="/formulaire-groupe" class="bg-[var(--color-anjou-gold)] text-white px-4 py-2 rounded text-sm hover:opacity-90 transition">
              Contact
            </a>
            <div class="flex space-x-2">
              <a href="https://www.facebook.com/people/Anjou-Explore/100077903721712/" target="_blank" rel="noopener noreferrer" class="text-[var(--color-anjou-brown)] hover:text-[var(--color-anjou-gold)]" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
